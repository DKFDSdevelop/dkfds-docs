{% from "components/form/controls/new-date-picker.njk" import datepicker as datepicker %}

<main class="container page-container" id="main-content">
    <div class="row mb-905">
        <div class="col-12">
            <h1 class="h2 mt-0">Ny datovælger</h1>
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            <p>Test date picker i modal</p>
            <p>Escape til at lukke dropdown skal ikke lukke datovælger</p>
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            <h2 class="h3 mt-0">Datovælger med inputfelt</h2>
        </div>
        <div class="col-12">
            {{ 
                datepicker({
                    "id": "input-text",
                    "name": "input-text",
                    "label": "Datovælger"
                }) 
            }}
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            <h2 class="h3 mt-0">Datovælger med valgt dato</h2>
        </div>
        <div class="col-12">
            <div class="form-group new-date-picker" data-selected-date="2025-08-07">
                <label class="form-label" for="input-text-date-selected">Datovælger</label>
                <div class="d-flex pt-3">
                    <input type="text" id="input-text-date-selected" name="input-text-date-selected" class="form-input input-width-xs mt-0 mr-2"
                        required>
                    <button class="button button-icon-only" aria-haspopup="dialog">
                        <svg class="icon-svg" focusable="false" aria-hidden="true">
                            <use href="#calendar-month"></use>
                        </svg>
                        <span class="sr-only">Åbn datovælger</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            <h2 class="h3 mt-0">Datovælger med begrænset datovalg</h2>
        </div>
        <div class="col-12">
            {{ 
                datepicker({
                    "id": "input-text-date-limited",
                    "name": "input-text-date-limited",
                    "label": "Datovælger med begrænset datovalg",
                    "helptext": "Vælg mellem 7. august 2024 og 17. januar 2026",
                    "minDate": "2024-08-07",
                    "maxDate": "2026-01-17"
                }) 
            }}
            {{ 
                datepicker({
                    "id": "input-text-date-limited-2",
                    "name": "input-text-date-limited-2",
                    "label": "Datovælger med begrænset datovalg",
                    "helptext": "Vælg mellem 7. august 2024 og 24. august 2024",
                    "minDate": "2024-08-07",
                    "maxDate": "2024-08-24"
                }) 
            }}
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            <h2 class="h3 mt-0">Datovælger med andet format</h2>
        </div>
        <div class="col-12">
            {{ 
                datepicker({
                    "id": "date-picker-format",
                    "name": "date-picker-format",
                    "label": "Datovælger",
                    "helptext": "Formatet er DD-MM-YYYY",
                    "format": "DD-MM-YYYY"
                }) 
            }}
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            <h2 class="h3 mt-0">Datovælger uden inputfelt</h2>
        </div>
        <div class="col-12">
            <div class="form-group new-date-picker">
                <div class="new-date-picker-wrapper"></div>
            </div>
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            <h2 class="h3 mt-0">Datovælger uden knap</h2>
        </div>
        <div class="col-12">
            <div class="form-group new-date-picker">
                <label class="form-label" for="input-text-no-button">Datovælger</label>
                <input type="text" id="input-text-no-button" name="input-text-no-button" class="form-input input-width-xs mb-3" required readonly>
                <div class="new-date-picker-wrapper"></div>
            </div>
        </div>
    </div>
</main>