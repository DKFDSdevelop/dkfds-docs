{% from "components/form/controls/new-date-picker.njk" import datepicker as datepicker %}

<main class="container page-container" id="main-content">
    <div class="row mb-905">
        <div class="col-12">
            <h1 class="h2 mt-0">Ny datovælger</h1>
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            <p>Test date picker i modal</p>
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            <h2 class="h3 mt-0">Datovælger med inputfelt</h2>
        </div>
        <div class="col-12">
            {{ 
                datepicker({
                    "id": "input-text",
                    "name": "input-text",
                    "label": "Datovælger"
                }) 
            }}
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            <h2 class="h3 mt-0">Datovælger med valgt dato</h2>
        </div>
        <div class="col-12">
            {{ 
                datepicker({
                    "id": "input-text-date-selected",
                    "name": "input-text-date-selected",
                    "label": "Datovælger",
                    "value": "07-08-2025"
                }) 
            }}
        </div>
        <div class="col-12">
            <div class="form-group new-date-picker mt-7" data-selected-date="2025-08-07">
                <div class="new-date-picker-wrapper"></div>
            </div>
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            <h2 class="h3 mt-0">Datovælger med begrænset datovalg</h2>
        </div>
        <div class="col-12">
            {{ 
                datepicker({
                    "id": "input-text-date-limited",
                    "name": "input-text-date-limited",
                    "label": "Datovælger med begrænset datovalg",
                    "helptext": "Vælg mellem 7. august 2024 og 17. januar 2026",
                    "minDate": "2024-08-07",
                    "maxDate": "2026-01-17"
                }) 
            }}
            {{ 
                datepicker({
                    "id": "input-text-date-limited-2",
                    "name": "input-text-date-limited-2",
                    "label": "Datovælger med begrænset datovalg",
                    "helptext": "Vælg mellem 7. august 2024 og 24. august 2024",
                    "minDate": "2024-08-07",
                    "maxDate": "2024-08-24"
                }) 
            }}
            {{ 
                datepicker({
                    "id": "input-text-date-limited-3",
                    "name": "input-text-date-limited-3",
                    "label": "Datovælger med begrænset datovalg",
                    "helptext": "Vælg mellem 1. januar 1 og 31. december 10",
                    "minDate": "0001-01-01",
                    "maxDate": "0010-12-31"
                }) 
            }}
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            <h2 class="h3 mt-0">Datovælger med andet format</h2>
        </div>
        <div class="col-12">
            {{ 
                datepicker({
                    "id": "date-picker-format",
                    "name": "date-picker-format",
                    "label": "Datovælger",
                    "helptext": "Formatet er DD-MM-YYYY",
                    "format": "DD-MM-YYYY"
                }) 
            }}
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            <h2 class="h3 mt-0">Datovælger med default dato</h2>
        </div>
        <div class="col-12">
            {{ 
                datepicker({
                    "id": "date-picker-default",
                    "name": "date-picker-default",
                    "label": "Datovælger",
                    "defaultDate": "2021-05-08"
                }) 
            }}
        </div>
        <div class="col-12">
            <div class="form-group new-date-picker mt-7" data-default-date="2021-05-08">
                <div class="new-date-picker-wrapper"></div>
            </div>
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            <h2 class="h3 mt-0">Datovælger uden inputfelt</h2>
        </div>
        <div class="col-12">
            <div class="form-group new-date-picker">
                <div class="new-date-picker-wrapper"></div>
            </div>
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            <h2 class="h3 mt-0">Datovælger uden knap</h2>
        </div>
        <div class="col-12">
            <div class="form-group new-date-picker">
                <label class="form-label" for="input-text-no-button">Datovælger</label>
                <input type="text" id="input-text-no-button" name="input-text-no-button" class="form-input input-width-xs mb-3" required readonly>
                <div class="new-date-picker-wrapper"></div>
            </div>
        </div>
    </div>
</main>