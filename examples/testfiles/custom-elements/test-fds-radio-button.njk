    <div class="row mb-905">
        <div class="col-12">
            <h2 class="h3 mt-0">Deaktiveret Radioknapgruppe</h2>
        </div>
        <div class="col-12">
            <fds-radio-button-group group-label="Deactivated radio group" group-disabled>
