        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            {{ 
                card({
                    "navigationCard": { "href": "#" }
                }) 
            }}
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            {{ 
                card({
                    "navigationCard": { "href": "#" },
                    "content": "<p class=\"mt-0\">Card, der kun indeholder tekst.</p>"
                }) 
