{% from "components/cards/cards.njk" import newCard as card %}

<main class="container page-container" id="main-content">
    <div class="row mb-905">
        <div class="col-12">
            <h1 class="h2 mt-0">Cards</h1>
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            {{ 
                card({
                    "subheading": "Subheading"
                }) 
            }}
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            {{ 
                card({
                    "links": true
                }) 
            }}
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            {{ 
                card({
                    "buttons": true,
                    "subheading": "Subheading"
                }) 
            }}
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            {{ 
                card({
                    "navigationCard": true,
                    "subheading": "Subheading"
                }) 
            }}
        </div>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            {{ 
                card({
                    "navigationCard": true,
                    "external": true,
                    "subheading": "Subheading"
                }) 
            }}
        </div>
    </div>
</main>