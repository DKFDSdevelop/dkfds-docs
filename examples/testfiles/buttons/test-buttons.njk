                    }) 
                }}
                {{ 
                    button({
                        "variant": "secondary",
                        "text": "Active",
                        "classes": { "button": "button-active" }
                    }) 
                }}
                {{ 
                    button({
                        "variant": "secondary",
                        "text": "Disabled",
                        "attributes": "disabled"
                    }) 
                }}
                {{ 
                    button({
                        "variant": "secondary",
                        "text": "Icon",
                        "icon": "refresh"
                    }) 
                }}
            </div>
        </div>
    </div>
    <div class="row mb-9">
        <div class="col-12">
            <p>Tertiærknap i alle states</p>
            <div class="button-group">
                {{ 
                    button({
                        "variant": "tertiary",
                        "text": "Default"
                    }) 
                }}
                {{ 
                    button({
                        "variant": "tertiary",
                        "text": "Hover",
                        "classes": { "button": "button-hover" }
                    }) 
