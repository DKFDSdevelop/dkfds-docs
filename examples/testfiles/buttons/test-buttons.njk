{% from "components/buttons/buttons.njk" import button as button %}
{% from "components/icons/icons--svg.njk" import icon_svg as icon_svg %}

<main class="container page-container" id="main-content" style="background-color: #FDD0A2">
    <div class="row">
        <div class="col-12">
            <h1 class="h2 mt-0 mb-9">Knapper</h1>
        </div>
    </div>
    <div class="row mb-9">
        <div class="col-12">
            <p>Primærknap i alle states</p>
            <div class="button-group">
                {{ 
                    button({
                        "variant": "primary",
                        "text": "Default"
                    }) 
                }}
                {{ 
                    button({
                        "variant": "primary",
                        "text": "Hover",
                        "classes": { "button": "button-hover" }
                    }) 
                }}
                {{ 
                    button({
                        "variant": "primary",
                        "text": "Focus",
                        "classes": { "button": "focus" }
                    }) 
                }}
                {{ 
                    button({
                        "variant": "primary",
                        "text": "Active",
                        "classes": { "button": "button-active" }
                    }) 
                }}
                {{ 
                    button({
                        "variant": "primary",
                        "text": "Disabled",
                        "attributes": "disabled"
                    }) 
                }}
                {{ 
                    button({
                        "variant": "primary",
                        "text": "Icon",
                        "icon": "refresh"
                    }) 
                }}
            </div>
        </div>
    </div>
    <div class="row mb-9">
        <div class="col-12">
            <p>Sekundærknap i alle states</p>
            <div class="button-group">
                {{ 
