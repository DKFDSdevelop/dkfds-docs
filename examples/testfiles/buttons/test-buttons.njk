                    }) 
                }}
                {{ 
                    button({
                        "variant": "tertiary",
                        "text": "Icon",
                        "icon": "refresh"
                    }) 
                }}
            </div>
        </div>
    </div>
    <div class="row mb-9">
        <div class="col-12">
            <p>Advarselsknap i alle states</p>
            <div class="button-group">
                {{ 
                    button({
                        "variant": "warning",
                        "text": "Default"
                    }) 
                }}
                {{ 
                    button({
                        "variant": "warning",
                        "text": "Hover",
                        "classes": { "button": "button-hover" }
                    }) 
                }}
                {{ 
                    button({
                        "variant": "warning",
                        "text": "Focus",
                        "classes": { "button": "focus" }
                    }) 
                }}
                {{ 
                    button({
                        "variant": "warning",
                        "text": "Active",
