    <div class="row">
        <div class="col-12">
            <p>Påkrævet-label og fejlbesked</p>
            {{ 
                select({
                    "name": "options-name",
                    "id": "options-id",
                    "label": "Dropdown label",
                    "requiredLabel": true,
                    "errorMessage": "Der er sket en fejl",
                    "options": [
                        { "value": "option1", "text": "Mulighed 1" },
                        { "value": "option2", "text": "Mulighed 2" },
                        { "value": "option3", "text": "Mulighed 3" }
