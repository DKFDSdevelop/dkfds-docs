{% from "components/form/controls/select.njk" import select as select %}

<main class="container page-container" id="main-content">
    <div class="row mb-905">
        <div class="col-12">
            <h1 class="h2 mt-0">test-dropdown-2</h1>
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            <p>Klasser og attributter</p>
            {{ 
                select({
                    "name": "options-name",
                    "id": "options-id",
                    "label": "Dropdown label",
                    "classes": {
                        "formgroup": "formgroupclass",
                        "label": "labelclass",
                        "select": "selectclass"
                    },
                    "attributes": {
                        "formgroup": "formgroupattr",
                        "label": "labelattr",
                        "select": "selectattr"
                    },
                    "options": [
                        { "value": "option1", "text": "Mulighed 1" },
                        { "value": "option2", "text": "Mulighed 2" },
                        { "value": "option3", "text": "Mulighed 3" }
                    ]
                }) 
            }}
        </div>
    </div>
</main>