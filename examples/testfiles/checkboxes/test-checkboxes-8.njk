{% from "components/checkboxes/checkbox.njk" import checkbox as checkbox %}
{% from "components/checkboxes/checkboxes.njk" import checkboxes as checkboxes %}

<main class="container page-container" id="main-content">
    <div class="row mb-905">
        <div class="col-12">
            <h1 class="h2 mt-0">test-checkboxes-8</h1>
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            <p>Hjælpetekst, fejlbesked, små tjekbokse, klasser og tooltip</p>
            {{
                checkboxes({
                    "id": "checkboxgroup",
                    "checkboxLegend": "Liste med tjekbokse",
                    "groupname": "checkbox-example",
                    "errorMessage": "Dette er en fejlbesked",
                    "classes": "groupclass",
                    "helptext": "Dette er en hjælpetekst",
                    "tooltip": { "text": "Dette er et tooltip", "id": "checkboxgroup-tooltip", "contentElement": "span" },
                    "isLarge": false,
                    "items": [
                        { "value": "v1", "label": "Tjekboks 1" },
                        { "value": "v2", "label": "Tjekboks 2" },
                        { "value": "v3", "label": "Tjekboks 3" }
                    ]
                })
            }}    
        </div>
    </div>
</main>