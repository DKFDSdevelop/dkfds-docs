{% from "components/table/table.njk" import table as table %}
{% from "components/toggle/toggle.njk" import toggle_switch as toggle_switch %}
{% from "components/radiobuttons/radiobuttons.njk" import radiobuttons as radiobuttons %}

<main class="container page-container" id="main-content">
    <div class="row mb-905">
        <div class="col-12">
            <h1 class="h2 mt-0">Tabel med komponenter</h1>
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-6">
            <div role="group" aria-labelledby="toggle-switch-heading" class="w-percent-100 w-percent-sm-80 w-percent-lg-50 pr-sm-905">
                <h2 class="h5 mb-4 mt-0" id="toggle-switch-heading">Tabeludseende</h2>
                {{ 
                    toggle_switch({
                        "label": "Borderless",
                        "classes": "w-percent-100"
                    })
                }}
                {{ 
                    toggle_switch({
                        "label": "Zebra",
                        "classes": "w-percent-100"
                    })
                }}
            </div>            
        </div>
        <div class="col-6">
            {{
                radiobuttons({
                    "id": "radiogroup",
                    "radiogroupLegend": "Linjeh√∏jde",
                    "groupname": "radio-line-height",
                    "items": [
                        { "value": "v1", "label": "Normal", "checked": true },
                        { "value": "v2", "label": "Kompakt" },
                        { "value": "v3", "label": "Ekstra kompakt" }
                    ]
                })
            }}
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            {{ 
                table({
                    "thead": [
                        { "headerContent": "First column" },
                        { "headerContent": "Second column" }
                    ],
                    "tbody": [
                        [
                            { "content": "<div class='form-group'><fieldset><legend class='form-label'>Tjekbokse</legend><div class='form-group-checkbox'><input type='checkbox' id='large-option1' name='checkbox-large[]' class='form-checkbox' value='1'><label class='form-label' for='large-option1' tabindex='-1'>Tjekboks 1</label></div><div class='form-group-checkbox'><input type='checkbox' id='large-option2' name='checkbox-large[]' class='form-checkbox' value='2'><label class='form-label' for='large-option2' tabindex='-1'>Tjekboks 2</label></div><div class='form-group-checkbox'><input type='checkbox' id='large-option3' name='checkbox-large[]' class='form-checkbox' value='3'><label class='form-label' for='large-option3' tabindex='-1'>Tjekboks 3</label></div></fieldset></div>" },
                            { "content": "Tjekbokse" }
                            
                        ],
                        [
                            { "content": "Radioknapper" },
                            { "content": "<div class='form-group'><fieldset aria-labelledby='radio-example-legend'><legend class='form-label' id='radio-example-legend'>Radioknapper</legend><div class='form-group-radio'><input type='radio' id='radiogroup-in-table-option1' name='radio-table-example' class='form-radio' value='v1'><label class='form-label' for='radiogroup-in-table-option1' tabindex='-1'>Valg 1</label></div><div class='form-group-radio'><input type='radio' id='radiogroup-in-table-option2' name='radio-table-example' class='form-radio' value='v2'><label class='form-label' for='radiogroup-in-table-option2' tabindex='-1'>Valg 2</label></div><div class='form-group-radio'><input type='radio' id='radiogroup-in-table-option3' name='radio-table-example' class='form-radio' value='v3'><label class='form-label' for='radiogroup-in-table-option3' tabindex='-1'>Valg 3</label></div></fieldset>
                            </div>" }
                        ],
                        [
                            { "content": "<div class='form-group'><label class='form-label' for='input-text' tabindex='-1'>Inputfelt med label</label><input type='text' id='input-text' name='input-text' class='form-input' required></div>" },
                            { "content": "Inputfelt" }
                        ]
                    ]
                })
            }}
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            {{ 
                table({
                    "selectable": true,
                    "thead": [
                        { "headerContent": "First column" },
                        { "headerContent": "Second column" }
                    ],
                    "tbody": [
                        [
                            { "content": "Tjekbokse" },
                            { "content": "<div class='form-group'><fieldset><legend class='form-label'>Tjekbokse</legend><div class='form-group-checkbox'><input type='checkbox' id='selectable-option1' name='checkbox-large[]' class='form-checkbox' value='1'><label class='form-label' for='selectable-option1' tabindex='-1'>Tjekboks 1</label></div><div class='form-group-checkbox'><input type='checkbox' id='selectable-option2' name='checkbox-large[]' class='form-checkbox' value='2'><label class='form-label' for='selectable-option2' tabindex='-1'>Tjekboks 2</label></div><div class='form-group-checkbox'><input type='checkbox' id='selectable-option3' name='checkbox-large[]' class='form-checkbox' value='3'><label class='form-label' for='selectable-option3' tabindex='-1'>Tjekboks 3</label></div></fieldset></div>" }
                        ],
                        [
                            { "content": "Radioknapper" },
                            { "content": "<div class='form-group'><fieldset aria-labelledby='radio-example-legend-selectable'><legend class='form-label' id='radio-example-legend-selectable'>Radioknapper</legend><div class='form-group-radio'><input type='radio' id='radiogroup-in-selectable-table-option1' name='radio-selectable-example' class='form-radio' value='v1'><label class='form-label' for='radiogroup-in-selectable-table-option1' tabindex='-1'>Valg 1</label></div><div class='form-group-radio'><input type='radio' id='radiogroup-in-selectable-table-option2' name='radio-selectable-example' class='form-radio' value='v2'><label class='form-label' for='radiogroup-in-selectable-table-option2' tabindex='-1'>Valg 2</label></div><div class='form-group-radio'><input type='radio' id='radiogroup-in-selectable-table-option3' name='radio-selectable-example' class='form-radio' value='v3'><label class='form-label' for='radiogroup-in-selectable-table-option3' tabindex='-1'>Valg 3</label></div></fieldset>
                            </div>" }
                        ],
                        [
                            { "content": "Inputfelt" },
                            { "content": "<div class='form-group'><label class='form-label' for='input-text2' tabindex='-1'>Inputfelt med label</label><input type='text' id='input-text2' name='input-text2' class='form-input' required></div>" }
                            
                        ]
                    ]
                })
            }}
        </div>
    </div>
</main>
