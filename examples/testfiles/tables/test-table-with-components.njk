{% from "components/table/table.njk" import table as table %}
{% from "components/toggle/toggle.njk" import toggle_switch as toggle_switch %}
{% from "components/radiobuttons/radiobuttons.njk" import radiobuttons as radiobuttons %}

<main class="container page-container" id="main-content">
    <div class="row">
        <div class="col-12">
            <h1 class="h2 mt-0 mb-9">Tabel med komponenter</h1>
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-6">
            <div role="group" aria-labelledby="toggle-switch-heading" class="w-percent-100 w-percent-sm-80 w-percent-lg-50 pr-sm-905">
                <h2 class="h5 mb-4 mt-0" id="toggle-switch-heading">Tabeludseende</h2>
                {{ 
                    toggle_switch({
                        "label": "Borderless",
                        "classes": "w-percent-100"
                    })
                }}
                {{ 
                    toggle_switch({
                        "label": "Zebra",
                        "classes": "w-percent-100"
                    })
                }}
            </div>            
        </div>
        <div class="col-6">
            {{
                radiobuttons({
                    "id": "radiogroup",
                    "radiogroupLegend": "Linjeh√∏jde",
                    "groupname": "radio-line-height",
                    "items": [
                        { "value": "v1", "label": "Normal", "checked": true },
                        { "value": "v2", "label": "Kompakt" },
                        { "value": "v3", "label": "Ekstra kompakt" }
                    ]
                })
            }}
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            {{ 
                table({
                    "thead": [
                        { "headerContent": "First column" },
                        { "headerContent": "Second column" }
                    ],
                    "tbody": [
                        [
                            { "content": "First row, first cell" },
                            { "content": "<div class='form-group'><fieldset><legend class='form-label'>Tjekbokse</legend><div class='form-group-checkbox'><input type='checkbox' id='large-option1' name='checkbox-large[]' class='form-checkbox' value='1'><label class='form-label' for='large-option1'>Tjekboks 1</label></div><div class='form-group-checkbox'><input type='checkbox' id='large-option2' name='checkbox-large[]' class='form-checkbox' value='2'><label class='form-label' for='large-option2'>Tjekboks 2</label></div><div class='form-group-checkbox'><input type='checkbox' id='large-option3' name='checkbox-large[]' class='form-checkbox' value='3'><label class='form-label' for='large-option3'>Tjekboks 3</label></div></fieldset></div>" }
                        ],
                        [
                            { "content": "Second row, first cell" },
                            { "content": "<div class='form-group'><fieldset aria-labelledby='radio-example-legend'><legend class='form-label' id='radio-example-legend'>Radioknapper</legend><div class='form-group-radio'><input type='radio' id='radiogroup-in-table-option1' name='radio-example' class='form-radio' value='v1'><label class='form-label' for='radiogroup-in-table-option1'>Valg 1</label></div><div class='form-group-radio'><input type='radio' id='radiogroup-in-table-option2' name='radio-example' class='form-radio' value='v2'><label class='form-label' for='radiogroup-in-table-option2'>Valg 2</label></div><div class='form-group-radio'><input type='radio' id='radiogroup-in-table-option3' name='radio-example' class='form-radio' value='v3'><label class='form-label' for='radiogroup-in-table-option3'>Valg 3</label></div></fieldset>
                            </div>" }
                        ],
                        [
                            { "content": "Third row, first cell" },
                            { "content": "Third row, second cell" }
                        ],
                        [
                            { "content": "Fourth row, first cell" },
                            { "content": "Fourth row, second cell" }
                        ]
                    ]
                })
            }}
        </div>
    </div>
</main>
