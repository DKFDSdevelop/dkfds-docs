{% from "components/form/controls/text-input.njk" import textinput as textinput %}

<main class="container page-container" id="main-content">
    <div class="row mb-905">
        <div class="col-12">
            <h1 class="h2 mt-0">test-input-fields-3</h1>
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            <p>Tooltip, hjælpetekst og prefix</p>
            {{
                textinput({
                    "id": "input-text",
                    "name": "input-text",
                    "label": "E-mail",
                    "tooltip": "Dette er et tooltip",
                    "helptext": "Her er en hjælpetekst",
                    "prefix": "Pre"
                })
            }}
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            <p>Prefix, suffix og fejlbesked</p>
            {{
                textinput({
                    "id": "input-text",
                    "name": "input-text",
                    "label": "Udvalgt vare",
                    "errorMessage": "Dette er en fejlbesked",
                    "prefix": "Pris",
                    "suffix": "kr."
                })
            }}
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            <p>Prefix, suffix og readonly</p>
            {{
                textinput({
                    "id": "input-text",
                    "name": "input-text",
                    "label": "Udvalgt vare",
                    "readonly": true,
                    "prefix": "Pris",
                    "suffix": "kr."
                })
            }}
        </div>
    </div>
    <div class="row mb-905">
        <div class="col-12">
            <p>Prefix, suffix og disabled</p>
            {{
                textinput({
                    "id": "input-text",
                    "name": "input-text",
                    "label": "Udvalgt vare",
                    "prefix": "Pris",
                    "suffix": "kr.",
                    "disabled": true,
                    "optionalLabel": true
                })
            }}
        </div>
    </div>
</main>