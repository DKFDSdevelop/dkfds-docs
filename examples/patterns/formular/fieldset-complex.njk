{% from "components/form/controls/text-input.njk" import textinput as textinput %}
{% from "components/form/controls/radiobutton.njk" import radiobutton as radiobutton %}
{% from "components/form/controls/checkbox.njk" import checkbox as checkbox %}
{% from "components/buttons/buttons.njk" import button as button %}
{% from "components/form/controls/date-input.njk" import datoinput as datoinput %}

<h1 class="h2">Dine kontaktoplysninger</h1>
<form novalidate>
    {{textinput({
        "id":"fnavn",
        "label": {
            "text":"Fornavn"
            },
        "name":"fnavn"})}}
    {{textinput({
        "name":"enavn", 
        "label": {
            "text":"Efternavn"
            },
        "id":"enavn"})}}
    {{textinput({
        "id":"fieldset-email",
        "label":{
            "text":"E-mail adresse"
            },
        "name":"email"})}}
    {{textinput({
        "id":"fieldset-telefon",
        "label": {
            "text":"Telefonnummer"
            },
        "classes":"input-width-s",
        "name":"telefon"})}}

    <div class="form-group">
        <fieldset>
            <legend class="form-label">Hvordan vil du helst kontaktes?</legend>
            <ul class="nobullet-list">
              <li>{{ radiobutton(radiobutton_telefon) }}</li>
              <li>{{ radiobutton(radiobutton_email) }}</li>
            </ul>
        </fieldset>
    </div>
    <div class="form-group">
        <fieldset>
            <legend class="form-label">Hvornår på dagen vil det passe bedst, at vi kontakter dig?</legend>
            <ul class="nobullet-list">
              <li>{{ checkbox({
                  "id":"checkbox-morgen",
                  "name": "tidspunkt[]",
                  "value": "morgen",
                  "label": "Om morgenen",
                  "large": true}) }}</li>
              <li>{{ checkbox({
                  "id": "checkbox-middag",
                  "name": "tidspunkt[]",
                  "value": "middag", 
                  "label":"Ved middagstid",
                  "large": true}) }}</li>
              <li>{{ checkbox({
                  "id": "checkbox-eftermiddag",
                  "name": "tidspunkt[]",
                  "value": "eftermiddag",
                  "label": "Om eftermiddagen",
                  "large": true}) }}</li>
              <li>{{ checkbox({
                  "id": "checkbox-aften",
                  "name": "tidspunkt[]",
                  "value": "aften",
                  "label": "Om aftenen", 
                  "large":true}) }}</li>
            </ul>
        </fieldset>
    </div>
    <div class="form-group">
        <fieldset>
            <legend class="h4">Personlige oplysninger</legend>

            <!-- Felt start: Fødselsdato -->
            {{datoinput({
                "labels": {"legend": "Fødselsdato", "day": "Dag", "month": "Måned", "year":"År"}, "helptext": "For eksempel: 05 12 1987", "classes": "mt-0"})}}
            <!-- Felt slut: Fødselsdato -->

            <!-- Felt start: Odense -->
            <div class="form-group">
                <fieldset>
                    <legend class="h5">Bor du i Odense?</legend>
                    <ul class="nobullet-list">
                      <li>{{ radiobutton(radiobutton_odense_ja) }}</li>
                      <li>{{ radiobutton(radiobutton_odense_nej) }}</li>
                    </ul>
                </fieldset>
            </div>
            <!-- Felt slut: Odense -->
        </fieldset>
    </div>
    <!-- Felt slut: Personlige oplysninger -->
    <!-- Knap start -->
    {{ button({
        "text":"Gem oplysninger",
        "classes": "primary mt-9"}) }}
    <!-- Knap slut -->
</form>
