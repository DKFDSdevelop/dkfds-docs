{% from "components/form/controls/text-input.njk" import textinput as textinput %}
{% from "components/radiobuttons/radiobuttons.njk" import radiobuttons as radiobuttons %}
{% from "components/form/controls/checkbox.njk" import checkbox as checkbox %}
{% from "components/buttons/buttons.njk" import button as button %}
{% from "components/form/controls/date-input.njk" import datoinput as datoinput %}

<h2>Dine kontaktoplysninger</h2>
<form novalidate>
    {{
        textinput({
            "id": "fnavn-complex",
            "label": "Fornavn",
            "name": "fnavn-complex"
        })
    }}
    {{
        textinput({
            "id": "enavn-complex", 
            "label": "Efternavn",
            "name": "enavn-complex"
        })
    }}
    {{
        textinput({
            "id": "email-complex", 
            "label": "E-mailadresse",
            "name": "email-complex",
            "type": "email"
        })
    }}
    {{
        textinput({
            "id": "telefon-complex",
            "label": "Telefonnummer",
            "classes": { "input": "input-width-s" },
            "name": "telefon-complex",
            "type": "tel"
        })
    }}

    {{ radiobuttons({
            "id": "kontakt",
            "radiogroupLegend": "Hvordan vil du helst kontaktes?",
            "groupname": "kontakt",
            "items": [
                {
                    "value": "telefon",
                    "label": "Pr. telefon"
                },
                {
                    "value": "email",
                    "label": "Pr. e-mail"
                }
            ]
        })
    }}
    <div class="form-group">
        <fieldset>
            <legend class="form-label">Hvornår på dagen vil det passe bedst, at vi kontakter dig?</legend>
            <ul class="nobullet-list">
                <li>{{ checkbox({
                    "id":"checkbox-morgen",
                    "name": "tidspunkt[]",
                    "value": "morgen",
                    "label": "Om morgenen",
                    "large": true}) }}</li>
                <li>{{ checkbox({
                    "id": "checkbox-middag",
                    "name": "tidspunkt[]",
                    "value": "middag", 
                    "label":"Ved middagstid",
                    "large": true}) }}</li>
                <li>{{ checkbox({
                    "id": "checkbox-eftermiddag",
                    "name": "tidspunkt[]",
                    "value": "eftermiddag",
                    "label": "Om eftermiddagen",
                    "large": true}) }}</li>
                <li>{{ checkbox({
                    "id": "checkbox-aften",
                    "name": "tidspunkt[]",
                    "value": "aften",
                    "label": "Om aftenen", 
                    "large":true}) }}</li>
            </ul>
        </fieldset>
    </div>
    <div class="form-group">
        <fieldset>
            <legend class="h4">Personlige oplysninger</legend>
            {{
                datoinput({
                    "id": "date-input-birthday",
                    "legend": "Fødselsdato",
                    "helptext": "For eksempel: 05 12 1987",
                    "classes": "mt-0"
                })
            }}
            {{ radiobuttons({
                    "id": "odense",
                    "radiogroupLegend": "Bor du i Odense?",
                    "groupname": "odense",
                    "items": [
                        {
                            "value": "ja",
                            "label": "Ja"
                        },
                        {
                            "value": "nej",
                            "label": "Nej"
                        }
                    ]
                })
            }}
        </fieldset>
    </div>
    {{ 
        button({
            "text":"Gem oplysninger",
            "variant":"primary",
            "classes": "mt-9"
        }) 
    }}
</form>
