{% from "components/form/controls/text-input.njk" import textinput as textinput %}
{% from "components/radiobuttons/radiobuttons.njk" import radiobuttons as radiobuttons %}
{% from "components/checkboxes/checkboxes.njk" import checkboxes as checkboxes %}
{% from "components/buttons/buttons.njk" import button as button %}
{% from "components/form/controls/date-input.njk" import datoinput as datoinput %}

<h3>Dine kontaktoplysninger</h3>
<form novalidate>
    {{
        textinput({
            "id": "fnavn-complex",
            "label": "Fornavn",
            "name": "fnavn-complex",
            "autocomplete": "given-name"
        })
    }}
    {{
        textinput({
            "id": "enavn-complex", 
            "label": "Efternavn",
            "name": "enavn-complex",
            "autocomplete": "family-name"
        })
    }}
    {{
        textinput({
            "id": "email-complex", 
            "label": "E-mailadresse",
            "name": "email-complex",
            "type": "email",
            "autocomplete": "email"
        })
    }}
    {{
        textinput({
            "id": "telefon-complex",
            "label": "Telefonnummer",
            "classes": { "input": "input-width-s" },
            "name": "telefon-complex",
            "type": "tel",
            "autocomplete": "tel"
        })
    }}

    {{ radiobuttons({
            "id": "kontakt",
            "radiogroupLegend": "Hvordan vil du helst kontaktes?",
            "groupname": "kontakt",
            "items": [
                {
                    "value": "telefon",
                    "label": "Pr. telefon"
                },
                {
                    "value": "email",
                    "label": "Pr. e-mail"
                }
            ]
        })
    }}
    {{
        checkboxes({
            "id": "checkbox-tidspunkt",
            "checkboxLegend": "Hvornår på dagen vil det passe bedst, at vi kontakter dig?",
            "groupname": "tidspunkt[]",
            "items": [
                {
                    "value": "morgen",
                    "label": "Om morgenen"
                },
                {
                    "value": "middag",
                    "label": "Ved middagstid"
                },
                {
                    "value": "eftermiddag",
                    "label": "Om eftermiddagen"
                },
                {
                    "value": "aften",
                    "label": "Om aftenen"
                }
            ]
        })
    }}
    <div class="form-group">
        <fieldset>
            <legend class="h4">Personlige oplysninger</legend>
            {{
                datoinput({
                    "id": "date-input-birthday",
                    "legend": "Fødselsdato",
                    "helptext": "For eksempel: 05 12 1987",
                    "classes": "mt-0",
                    "autocomplete": {
                        "day": "bday-day",
                        "month": "bday-month",
                        "year": "bday-year"
                    },
                    "name": {
                        "day": "birthday-day",
                        "month": "birthday-month",
                        "year": "birthday-year"
                    }
                })
            }}
            {{ radiobuttons({
                    "id": "odense",
                    "radiogroupLegend": "Bor du i Odense?",
                    "groupname": "odense",
                    "items": [
                        {
                            "value": "ja",
                            "label": "Ja"
                        },
                        {
                            "value": "nej",
                            "label": "Nej"
                        }
                    ]
                })
            }}
        </fieldset>
    </div>
    {{ 
        button({
            "text":"Gem oplysninger",
            "variant":"primary",
            "classes": { "button": "mt-9" }
        }) 
    }}
</form>
