{% from "components/form/controls/text-input.njk" import textinput as textinput %}
{% from "components/buttons/buttons.njk" import button as button %}

<h2>Dine kontaktoplysninger</h2>
<form novalidate>
    {{
        textinput({
            "id": "simple-fnavn",
            "label": "Fornavn",
            "name": "fnavn",
            "autocomplete": "given-name"
        })
    }}
    {{
        textinput({
            "id": "simple-enavn", 
            "label": "Efternavn",
            "name": "enavn",
            "autocomplete": "family-name"
        })
    }}
    {{
        textinput({
            "id": "simple-email", 
            "label": "E-mailadresse",
            "name": "email",
            "type": "email",
            "autocomplete": "email"
        })
    }}
    {{
        textinput({
            "id": "simple-telefon",
            "label": "Telefonnummer",
            "classes": { "input": "input-width-s" },
            "name": "telefon",
            "type": "tel",
            "autocomplete": "tel"
        })
    }}
    {{ 
        button({
            "text":"Gem oplysninger", 
            "variant":"primary",
            "classes": { "button": "mt-9" }
        }) 
    }}
</form>