{% from "components/form/controls/text-input.njk" import textinput as textinput %}
{% from "components/form/controls/radiobutton.njk" import radiobutton as radiobutton %}
{% from "components/form/controls/checkbox.njk" import checkbox as checkbox %}
{% from "components/buttons/buttons.njk" import button as button %}
<div class="container">
    <form>
    <fieldset>
        <legend><h1 class="h2">Dine kontaktoplysninger</h1></legend>
        {{textinput("fnavn", "Fornavn", false, "", false, "fnavn", "", false, false)}}
        {{textinput("enavn", "Efternavn", false, "", false, "enavn", "", false, false)}}
        {{textinput("email", "E-mail adresse", false, "", false, "email", "", false, false)}}
        {{textinput("telefon", "Telefonnr.", false, "", false, "telefon", "", false, false)}}
    </fieldset>

    <div class="form-group">
        <fieldset>
            <legend><h2 class="h4">Hvordan vil du helst kontaktes?</h2></legend>
            <ul class="nobullet-list">
              <li>
                {{ radiobutton("kontakt-telefon", "kontakt", "kontakt-telefon", false, false, "Pr. telefon", "", "", true) }}
              </li>
              <li>
                {{ radiobutton("kontakt-email", "kontakt", "kontakt-email", false, false, "Pr. e-mail", "", "", true) }}
              </li>
            </ul>
        </fieldset>
    </div>
    <div class="form-group">
        <fieldset>
            <legend><h2 class="h4">Hvornår på dagen vil det passe bedst, at vi kontakter dig?</h2></legend>
            <ul class="nobullet-list">
              <li>
                {{ checkbox("morgen", "tidspunkt[]", "morgen", false, false, "Om morgenen", "", "", true) }}
              </li>
              <li>
                {{ checkbox("middag", "tidspunkt[]", "middag", false, false, "Ved middagstid", "", "", true) }}
              </li>
              <li>
                {{ checkbox("eftermiddag", "tidspunkt[]", "eftermiddag", false, false, "Om eftermiddagen", "", "", true) }}
              </li>
              <li>
                {{ checkbox("aften", "tidspunkt[]", "aften", false, false, "Om aftenen", "", "", true) }}
              </li>
            </ul>
        </fieldset>
    </div>

    <div class="form-group mt-9">
        {{ button("Gem oplysninger", "primary") }}
    </div>
  </form>
</div>
