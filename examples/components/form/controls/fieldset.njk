{% from "components/form/controls/text-input.njk" import textinput as textinput %}
{% from "components/form/controls/radiobutton.njk" import radiobutton as radiobutton %}
{% from "components/form/controls/checkbox.njk" import checkbox as checkbox %}
{% from "components/buttons/buttons.njk" import button as button %}
<div class="container">
    <form>
    <fieldset class="mb-7">
        <legend class="h3">Dine kontaktoplysninger</legend>
        {{textinput("fnavn", "Fornavn", false, "", false, "fnavn", "", false, false)}}
        {{textinput("enavn", "Efternavn", false, "", false, "enavn", "", false, false)}}
        {{textinput("email", "E-mail adresse", false, "", false, "email", "", false, false)}}
        {{textinput("telefon", "Telefonnr.", false, "", false, "telefon", "", false, false)}}
    </fieldset>
    <fieldset>
        <legend class="h4">Hvordan vil du helst kontaktes?</legend>
        <ul class="nobullet-list">
          <li>
            {{ radiobutton("kontakt-telefon", "kontakt", "kontakt-telefon", false, false, "Pr. telefon") }}
          </li>
          <li>
            {{ radiobutton("kontakt-email", "kontakt", "kontakt-email", false, false, "Pr. e-mail") }}
          </li>
        </ul>
    </fieldset>
    <fieldset>
        <legend class="h4">Hvornår på dagen vil det passe bedst, at vi kontakter dig?</legend>
        <ul class="nobullet-list">
          <li>
            {{ checkbox("morgen", "tidspunkt[]", "morgen", false, false, "Om morgenen") }}
          </li>
          <li>
            {{ checkbox("middag", "tidspunkt[]", "middag", false, false, "Ved middagstid") }}
          </li>
          <li>
            {{ checkbox("eftermiddag", "tidspunkt[]", "eftermiddag", false, false, "Om eftermiddagen") }}
          </li>
          <li>
            {{ checkbox("aften", "tidspunkt[]", "aften", false, false, "Om aftenen") }}
          </li>
        </ul>
    </fieldset>

    <div class="form-group">
        {{ button("Gem oplysninger", "primary") }}
    </div>
  </form>
</div>
