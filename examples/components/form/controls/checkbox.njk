{% from "components/form/controls/checkbox.njk" import checkbox as checkbox %}

<div class="container">

    <!-- Example of small checkbox -->
    <div class="form-group">
        <fieldset>
            <legend class="h5">Lille tjekboks</legend>
            <ul class="nobullet-list">
            {% for item in checkbox_example_small.items %}
              <li>
                {{ checkbox(item.id, item.name, item.value, item.disabled, item.checked, item.text, item.class, item.focus, item.large) }}
              </li>
            {% endfor %}
            </ul>
        </fieldset>
    </div>

    <!-- Example of large checkbox (recommended) -->
    <div class="form-group">
        <fieldset>
          <legend class="h5">Stor tjekboks (anbefalet)</legend>
          <ul class="nobullet-list">
            {% for item in checkbox_example_large.items %}
              <li>
                {{ checkbox(item.id, item.name, item.value, item.disabled, item.checked, item.text, item.class, item.focus, item.large) }}
              </li>
            {% endfor %}
          </ul>
        </fieldset>
    </div>

    <!-- Example with error message -->
    <div class="form-group form-error">
        <fieldset>
          <legend class="h5">Hvilken type af transport gør du brug af regelmæssigt?</legend>
            <span class="form-error-message" role="alert">Hjælpsom fejlbesked</span>
             <ul class="nobullet-list">
                {% for item in checkbox_error_examples.items %}
                  <li>
                    {{ checkbox(item.id, item.name, item.value, item.disabled, item.checked, item.text, item.class, item.focus, item.large, item.attr, item.inputClasses, item.inputAttrs, item.formClasses) }}
                  </li>
                {% endfor %}
              </ul>
        </fieldset>
    </div>
</div>
