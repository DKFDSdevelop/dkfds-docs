{% macro checkbox(id, name, value, disabled, checked, text, class, focus, large, attr, inputClasses, inputAttrs, formClasses) %}
  <div class="form-group {{formClasses}}">
    <input id="{{id}}" type="checkbox" name="{{name}}" value="{{value}}" class="form-checkbox {% if focus %}focus{% endif %} {% if large %}checkbox-large{% endif %} {{inputClasses}}"  {% if disabled %}disabled{% endif %} {% if checked %}checked{% endif %} {{inputAttrs | safe }}>
    <label for="{{id}}" class="{{class}}" {{attr}} >{{text | safe }}</label>
  </div>
{% endmacro %}

<div class="container">
  <ul class="unstyled-list">
    {% for item in checkbox_example.items %}
      <li class="mb-2">
        {{ checkbox(item.id, item.name, item.value, item.disabled, item.checked, item.text, item.class, item.focus, item.large) }}
      </li>
    {% endfor %}
  </ul>
</div>  