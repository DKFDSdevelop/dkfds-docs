{% from "components/cards/cards.njk" import newCard as card %}

<ul class="row card-row">
    <li class="col-12 col-sm-6 col-md-4">
        {{ 
            card({
                "navigationCard": { 
                    "href": "#"
                },
                "image": { 
                    "src": "{{ site.baseurl }}/assets/img/cards/card-placeholder.png",
                    "alt": "Neutralt billede af et ikon, der blot skal være et eksempel på grafik i et card."
                },
                "heading": "Lorem",
                "headingLevel": "h2",
                "content": "<p>Dette card linker til en anden side.</p>"
            }) 
        }}
    </li>
    <li class="col-12 col-sm-6 col-md-4">
        {{ 
            card({
                "navigationCard": { 
                    "href": "#",
                    "external": true
                },
                "image": { 
                    "src": "{{ site.baseurl }}/assets/img/cards/card-placeholder.png",
                    "alt": "Neutralt billede af et ikon, der blot skal være et eksempel på grafik i et card."
                },
                "heading": "Sit amet",
                "headingLevel": "h2",
                "content": "<p>Dette card linker til en side, der åbner i en ny fane.</p>"
            }) 
        }}
    </li>
    <li class="col-12 col-sm-6 col-md-4">
        {{ 
            card({
                "navigationCard": { 
                    "href": "#"
                },
                "heading": "Ipsum dolor",
                "headingLevel": "h2",
                "content": "<p>Dette card linker til en anden side.</p><p>Der er ikke noget billede på dette eksempelcard. Normalt vil enten alle eller ingen cards i samme liste have billede.</p>"
            }) 
        }}
    </li>
</ul>