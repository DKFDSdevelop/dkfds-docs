{% from "components/form/controls/checkbox.njk" import checkbox as checkbox %}

<div class="form-group">
    <fieldset>
        <legend class="form-label">Vælg fra listen</legend>
        <ul class="nobullet-list">
            <li>
                {{ checkbox({
                    "id": "checkbox1",
                    "name": "checkbox1",
                    "value": "1",
                    "label":"Tjekboks viser indhold",
                    "classes": "js-checkbox-toggle-content",
                    "inputAttributes": "data-js-target='#collapse-check1' data-aria-controls='collapse-check1' aria-expanded='false'",
                    "large": true}) }}
                <div id="collapse-check1" aria-hidden="true" class="checkbox-content">
                    <p class="mt-0 py-4">Dette indhold bliver vist når tjekboksen er valgt.</p>
                </div>
            </li>
            <li>
                {{ checkbox({
                    "id": "checkbox2",
                    "name": "checkbox2",
                    "value": "1",
                    "large": true,
                    "label": "Tjekboks viser indhold",
                    "classes":"js-checkbox-toggle-content", 
                    "inputAttributes":"data-js-target='#collapse-check2' data-aria-controls='collapse-check2' aria-expanded='false'"}) }}
                <div id="collapse-check2" aria-hidden="true" class="checkbox-content checkbox-content-large">
                    <p class="mt-0 py-4">Dette indhold bliver vist når tjekboksen er valgt.</p>
                </div>
            </li>
        </ul>
    </fieldset>
</div>



