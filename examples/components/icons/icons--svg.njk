{% macro icon_svg(iconname, classes, aria) %}<svg class="icon-svg {{ classes }}" {% if aria %}aria-label ="{{aria}}"{% endif %}><use href="#{{iconname}}"></use></svg>{% endmacro %}

<div class="container">
  <div class="icon-list row">
    {% for icons in icons_example.items %}
      <div class="col-md-2">
        <div class="icon-box">
          <div>{{ icon_svg(icons, "")}}</div>
          <span class="icon-name"><span class="sr-only">Example of </span>{{ icons }}</span>
        </div>
      </div>
    {% endfor %}
  </div> 
</div>

<style scoped>
  .icon-box {
    width: 100%;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }

  .icon-box .icon-svg {
    margin-bottom: 5px;
    height:4.4rem;
    width:4.4rem;
  }

  .icon-box .icon-name {
    white-space: nowrap;
    font-size:1.3rem;
  }
</style>
