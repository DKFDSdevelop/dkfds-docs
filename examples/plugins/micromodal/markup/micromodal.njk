{% macro modal(modal_id,modal_data) %}
	<div class="modal" id="{{ modal_id | default('modal-id-1') }}" aria-hidden="true">
		<div class="modal__overlay bg-modal" tabindex="-1" data-micromodal-close>
			<div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="{{ modal_data.modal_title_id | default('modal-id-1-title') }}">
				<div class="modal__header">
					<h1 class="modal__title h2" id="{{ modal_data.modal_title_id | default('modal-id-1-title') }}">
						{{ modal_data.modal_title | default('Modal title') }}
					</h1>
				</div>
				<div class="modal__content">
					{{ modal_data.modal_content | safe }}
				</div>
				{% if  modal_data.modal_actions %}
				<div class="modal__footer">
					{{ modal_data.modal_actions | safe }}
				</div>
				{% endif %}
				<button class="modal__close button button-secondary" aria-label="Close modal" data-micromodal-close>{{ modal_data.modal_close_text  | default('Luk') }}</button>
			</div>
		</div>
	</div>
{% endmacro %}

<button class="button button-primary" data-micromodal-trigger="modal-active">Åben modal (aktiv)</button>
<button class="button button-primary" data-micromodal-trigger="modal-passive">Åben modal (passiv)</button>

{{ modal('modal-active',modal_data_active) }}
{{ modal('modal-passive',modal_data_passive) }}
