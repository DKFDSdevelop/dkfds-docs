{% from "components/icons/icons--svg.njk" import icon_svg as icon_svg %}
{% from "components/modal/modal.njk" import modal as modal %}
{%- from "components/header/header.njk" import portal_header as portal_header -%}
{% from "components/header/header.njk" import mobile_portal_header as mobile_portal_header %}
{%- from "components/header/header.njk" import solution_header as solution_header -%}
{% from "components/header/header.njk" import mobile_solution_header as mobile_solution_header %}
{% from "components/footers/footer.njk" import footer as footer %}

{% from "components/overflow-menu/overflow-menu.njk" import overflowmenu as overflowmenu %}
{% from "components/buttons/buttons.njk" import button as button %}
{% from "components/alerts/alerts.njk" import alert as alert %}

{% block header %}
<header class="header">
    <div id="top"></div>
    <a href="#main-content" class="skipnav">Gå til sidens indhold</a>
    {{ portal_header(portal_header_data) }}
    
    {% set authorityText = 
      'Support: 12 34 56 78 <span class="d-print-none">· <a href="javascript:void(0);" data-module="modal" data-target="modal-contact" class="function-link d-inline-block mt-0">' + icon_svg({"name": "card-text"}) + 'Kontakt</a></span>'
    %}
    {{ 
      solution_header({
        "lastHeader": true,
        "title": {
          "href": "#",
          "text": "Ansøg om et eller andet"
        },
        "solutionInfo": {
          "hideOnPrint": true
        },
        "authority": {
          "name": "Myndighedsnavn",
          "text": authorityText
        }
      }) 
    }}

    <div class="overlay"></div>
    <nav class="nav"> <!-- collapsible-->
        <button class="function-link button-menu-close js-menu-close" aria-label="Luk menu">{{icon_svg({"name":"close"})}}Luk</button>

        {{ mobile_portal_header(portal_header_data) }}

    {{ 
      mobile_solution_header({
          "authority": {
              "name": "Myndighedsnavn",
              "text": authorityText
          }
      }) 
    }}
  </nav> <!-- collapsible nav end-->
</header>
{% endblock %}

{% block body %}
<main class="container page-container" id="main-content">
  {{ alert(alert_success_receipt) }}
  {{ alert(alert_warning_receipt) }}
  <h1 class="mb-3 mt-6">Kvittering</h1>
  <p class="form-hint mt-3 mb-5">Referencenummer: 98765432</p>
  <p>Hvis du ønsker dokumentation på ansøgningen kan du downloade kvitteringen.</p>
  {{ button(button_download) }}
  <h2 class="h4 mt-7">Hvad sker der nu</h2>
  <p>Sagens parter vil inden for 7 hverdage modtage en kvittering med journalnummer og oplysninger om, hvornår det forventes, at der er en udtalelse klar.</p>
  <h2 class="h4 mt-7">Husk betaling</h2>
  <p>Gebyret for udtalelsen skal sættes ind på vores konto:</p>
  <div class="w-percent-md-30 mt-4">
    <div class="row no-gutters row-bordered">
        <div class="col-12 col-md-4 weight-semibold">
            Reg.nr.
        </div>
        <div class="col-12 col-md-8">1234</div>
    </div>
    <div class="row no-gutters row-bordered">
        <div class="col-12 col-md-4 weight-semibold">
            Kontonr.
        </div>
        <div class="col-12 col-md-8">1234567890</div>
    </div>
</div>
<p>Gebyr: 6.000 kr.<br />Ved overførslen skal I oplyse ansøgers CPR-nummer.</p>
<h2 class="h4 mt-7">Ved spørgsmål eller supplerende oplysninger</h2>
<p>Kontakt os på kontakt@eksempel.dk eller telefon 12 34 56 78.<br />Referencenummer: 98765432</p>
<div>{{ button(button_opret) }}</div>
{{ button(button_afslut) }}
</main>
{% endblock %}

{% block banner -%}
{% endblock %}

{% block footer -%}
  {{ footer(footer_data) }}
{% endblock %}

{{ modal(modal_data) }}