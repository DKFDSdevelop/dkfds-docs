{% from "components/skip-link/skip-link.njk" import skiplink as skiplink %}
{% from "components/header/header.njk" import portal_header as portal_header %}
{% from "components/header/header.njk" import mobile_portal_header as mobile_portal_header %}
{% from "components/header/header.njk" import solution_header as solution_header %}
{% from "components/header/header.njk" import mobile_solution_header as mobile_solution_header %}
{% from "components/header/menu-buttons.njk" import menu_close_button as menu_close_button %}

{% from "components/icons/icons--svg.njk" import icon_svg as icon_svg %}
{% from "components/modal/modal.njk" import modal as modal %}
{% from "components/alerts/alerts.njk" import alert as alert %}

{% from "components/footers/footer.njk" import footer as footer %}

{% from "components/side-navigation/stepguide.njk" import overflow_stepguide as overflow_stepguide %}
{% from "components/form/controls/select.njk" import select as select %}
{% from "components/buttons/buttons.njk" import button as button %}

{# <!-- Variables --> #}

{% set solution_header_data = {
    "lastHeader": true,
    "hideOnPrint": true,
    "title": {
        "href": "#",
        "text": "Ansøg om et eller andet"
    },
    "authority": {
        "name": "Myndighedsnavn",
        "text": 'Support: 12 34 56 78 <span class="d-print-none">· <a href="javascript:void(0);" data-module="modal" data-target="modal-contact" class="function-link d-inline-block mt-0">' + icon_svg({"name": "card-text"}) + 'Kontakt</a></span>'
    }
} %}

{% set modal_content = 
    alert(alert_modal_warning) + 
    "<h3>En form for support</h3>
    <p>Hvis du har spørgsmål om:</p>
        <ul>
            <li>En ting som denne</li>
            <li>Et andet emne som dette</li>
        </ul>
    <p>Kan du ringe direkte til: <span class='d-inline-block'>12 34 56 78</span></p>
    <p>Telefonen er åben:</p> 
    <p class='m-0'>Mandag:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class='d-inline-block'>kl. 9-17</span></p>
    <p class='m-0'>Tirsdag-torsdag:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class='d-inline-block'>kl. 9-17</span></p>
    <p class='m-0'>Fredag:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class='d-inline-block'>kl. 9-14</span></p>" 
%}

{% set modal_actions = 
    button({
        "variant": "secondary",
        "text": "Luk",
        "attributes": "data-modal-close"
    })
%}

{# <!-- Page content starts here --> #}

{% block header %}
<header class="header">
    <div id="top"></div>
    {{ skiplink() }}
    {{ portal_header(portal_header_data) }}
    {{ solution_header(solution_header_data) }}
    <div class="overlay"></div>
    <nav class="nav">
        {{ menu_close_button() }}
        {{ mobile_portal_header(portal_header_data) }}
        {{ mobile_solution_header(solution_header_data) }}
    </nav>
</header>
{% endblock %}

{% block body %}
<main class="container page-container" id="main-content">
    <div><a href="/pages/eksempler/trinformular-til-ansoegning/ansoegning-3/" class="back-link">Tilbage</a></div>
    {{ overflow_stepguide(trinindikator_data) }}
    <h1>Tilføj dokumentation</h1>
    <form class="mb-6" novalidate method="post" action="/pages/eksempler/trinformular-til-ansoegning/ansoegning-4/">
        <div class="form-group file-input mb-5">
            <label class="form-label" for="fileinput">Tilføj dokument</label>
            <input class="mt-3" type="file" id="fileinput" name="file">
        </div>
        {{ button(button_upload) }}
    </form>
    <form novalidate method="post" action="/pages/eksempler/trinformular-til-ansoegning/ansoegning-5/">
        <div class="table--responsive-scroll mt-4 mb-7">
            <table class="table table--borderless table--responsive-headers table--compact">
                <thead>
                    <tr>
                        <th>Filnavn</th>
                        <th id="header2">Dokumentationstype</th>
                        <th id="header3">Sidetal <span class="weight-normal">(frivilligt)</span></th>
                        <th id="header4">Slet</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="vertical-align-middle" data-title="Filnavn" id="file1">{{ icon_svg({"name":
                            'file-pdf'})}}Journal.pdf</td>
                        <td class="vertical-align-middle" data-title="Dokumentationstype">
                            <div class="form-group">
                                <select class="form-select input-width-s" name="options" id="options"
                                    aria-labelledby="file1 header2">
                                    <option value="option1">Vælg type</option>
                                    <option value="option2">Type 1</option>
                                    <option value="option3">Type 2</option>
                                    <option value="option4">Type 3</option>
                                </select>
                            </div>
                        </td>
                        <td class="vertical-align-middle" data-title="Sidetal">
                            <div class="form-group">
                                <input class="form-input input-width-xxs" id="input-type-text" name="input-type-text"
                                    type="number" aria-labelledby="file1 header3" />
                            </div>
                        </td>
                        <td class="vertical-align-middle" data-title="Slet">
                            {{ button(button_delete) }}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        {{ button(button_next) }}
    </form>
</main>
{% endblock %}

{% block footer -%}
{{ footer(footer_data) }}
{% endblock %}

{{
    modal({
        "id": "modal-contact",
        "heading": "Kontakt",
        "content": modal_content,
        "forcedAction": false,
        "actions": modal_actions
    })
}}