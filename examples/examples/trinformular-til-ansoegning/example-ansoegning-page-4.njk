{% from "components/icons/icons--svg.njk" import icon_svg as icon_svg %}
{% from "components/modal/modal.njk" import modal as modal %}
{%- from "components/header/header.njk" import portal_header as portal_header -%}
{%- from "components/header/header.njk" import solution_header as solution_header -%}
{% from "components/footers/footer.njk" import footer as footer %}

{% from "components/side-navigation/stepguide.njk" import overflow_stepguide as overflow_stepguide %}
{% from "components/form/controls/select.njk" import select as select %}
{% from "components/buttons/buttons.njk" import button as button %}

{% block header %}
<header class="header">
    <div id="top"></div>
    <a href="#main-content" class="skipnav">Gå til sidens indhold</a>
    {{ portal_header(portal_header_data) }}
    
    {% set authorityText = 
      'Support: 12 34 56 78 <span class="d-print-none">· <a href="javascript:void(0);" data-module="modal" data-target="modal-contact" class="function-link d-inline-block">' + icon_svg({"name": "card-text"}) + 'Kontakt</a></span>'
    %}
    {{ 
      solution_header({
        "lastHeader": true,
        "title": {
          "href": "#",
          "text": "Ansøg om et eller andet"
        },
        "solutionInfo": {
          "hideOnPrint": true
        },
        "authority": {
          "name": "Myndighedsnavn",
          "text": authorityText
        }
      }) 
    }}

    <div class="overlay"></div>
    <nav class="nav"> <!-- collapsible-->
        <button class="function-link button-menu-close js-menu-close" title="Luk mobil menu">{{icon_svg({"name":"close"})}}Luk</button>

        <div class="portal-info-mobile">
        <p class="user"><span class="weight-semibold">Anders Andersen</span><br />Forsikringens Forsikringsfirma</p>

        <a href="#" class="button button-secondary button-signout">
            Log af
        </a>
    </div>

    <div class="solution-info-mobile">
        <p class="bold">Myndighedsnavn</p>
        <p>Support: 12 34 56 78 <br><a href="javascript:void(0);" data-module="modal" data-target="modal-contact" class="function-link d-inline-block">
            <svg class="icon-svg" aria-hidden="true"><use xlink:href="#card-text"></use></svg>Kontakt</a></p>
    </div>
  </nav> <!-- collapsible nav end-->
</header>
{% endblock %}

{% block body %}
<main class="container page-container" id="main-content">
  <div><a href="/pages/eksempler/trinformular-til-ansoegning/ansoegning-3/" class="back-link">Tilbage</a></div>
  {{ overflow_stepguide(trinindikator_data) }}
    <h1>Tilføj dokumentation</h1>
    <form class="mb-6" novalidate method="post" action="/pages/eksempler/trinformular-til-ansoegning/ansoegning-4/">
      <div class="form-group file-input mb-5">
        <label class="form-label" for="fileinput">Tilføj dokument</label>
        <input class="mt-3" type="file" id="fileinput" name="file" aria-describedby="help-text-hint" />
      </div>
      {{ button(button_upload) }}
    </form>
    <form novalidate method="post" action="/pages/eksempler/trinformular-til-ansoegning/ansoegning-5/">
      <div class="table--responsive-scroll mt-4 mb-7">
        <table class="table table--borderless table--responsive-headers table--compact">
            <thead>
                <tr>
                  <th>Filnavn</th>
                  <th id="header2">Dokumentationstype</th>
                  <th id="header3">Sidetal <span class="weight-normal">(frivilligt)</span></th>
                  <th id="header4">Slet</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                  <td class="vertical-align-middle" data-title="Filnavn" id="file1">{{ icon_svg({"name": 'file-pdf'})}}Journal.pdf</td>
                  <td class="vertical-align-middle" data-title="Dokumentationstype">
                    <div class="form-group">
                      <select class="form-select input-width-s" name="options" id="options" aria-labelledby="file1 header2">
                        <option value="option1">Vælg type</option>
                          <option value="option2">Type 1</option>
                          <option value="option3">Type 2</option>
                          <option value="option4">Type 3</option>
                      </select>
                  </div>
                  </td>
                  <td class="vertical-align-middle" data-title="Sidetal">
                    <div class="form-group">
                      <input class="form-input input-width-xxs" id="input-type-text" name="input-type-text" type="number" aria-labelledby="file1 header3" />
                  </div>
                  </td>
                  <td class="vertical-align-middle" data-title="Slet">
                    {{ button(button_delete) }}
                  </td>
                </tr>
            </tbody>
        </table>
    </div>
    {{ button(button_next) }}
    </form>
</main>
{% endblock %}

{% block banner -%}
{% endblock %}

{% block footer -%}
  {{ footer(footer_data) }}
{% endblock %}

{{ modal(modal_data) }}