{% from "components/icons/icons--svg.njk" import icon_svg as icon_svg %}
{% from "components/modal/modal.njk" import modal as modal %}
{% from "components/overflow-menu/overflow-menu.njk" import overflowmenu as overflowmenu %}

{%- from "components/header/header.njk" import portal_header as portal_header -%}
{%- from "components/header/header.njk" import solution_header as solution_header -%}
{% from "components/footers/footer-simple.njk" import footer_simple as footer_simple %}

{% from "components/form/controls/text-input.njk" import textinput as textinput %}
{% from "components/form/controls/radiobutton.njk" import radiobutton as radiobutton %}

{% block header %}
  <header class="header">
    {{ portal_header(portal_header_data) }}
    {{ solution_header(solution_header_data) }}

    <div class="overlay"></div>
    <nav class=" nav"> <!-- collapsible-->
      <button class="button button-tertiary button-menu-close js-menu-close" title="Luk mobil menu">{{icon_svg("close")}}Luk</button>

      <div class="portal-info-mobile">
        <p class="user bold">Christian Emil Vestergaard Christiansen</p>
        <a href="#" class="button button-secondary button-signout">
          Log af
        </a>
      </div>

      <div class="solution-info-mobile">
        <p class="bold">Erhvervsministeriet</p>
        <p><a href="javascript:void(0);" data-micromodal-trigger="modal-contact" class="function-link d-inline-block"><svg class="icon-svg" aria-hidden="true"><use xlink:href="#card-text-outline"></use></svg>Kontakt</a></p>
      </div>

    </nav> <!-- collapsible nav end-->
  </header>
{% endblock %}

{% block body %}
<main class="container page-container">

    <form class="form" method="post" action="/pages/eksempler/aktindsigt/aktindsigt-2/">
        <div role="group" aria-describedby="oplysninger-om-dig">
            <h1 id="oplysninger-om-dig">Oplysninger om dig</h1>
            {{textinput("id-fornavn", "Fornavn", "", "input-width-m", "", "Input til fornavn", "", false, "")}}
            {{textinput("id-efternavn", "Efternavn", "", "input-width-m", "", "Input til efternavn", "", false, "")}}
            {{textinput("id-gade-vej", "Gade/vej", "", "input-width-m", "", "Input til gade/vej", "", false, "")}}
            {{textinput("id-husnummer", "Husnummer", "", "input-width-xxs", "", "Input til husnummer", "", false, "")}}
            {{textinput("id-etage", "Etage", "(frivilligt)", "input-width-xxs", "", "Input til etage", "", false, "")}}
            {{textinput("id-side", "Side", "(frivilligt)", "input-width-xs", "", "Input til side", "", false, false, "Fx: TV, 2. dør")}}
            {{textinput("id-postnummer", "Postnummer", "", "input-width-xxs", "", "Input til postnummer", "", false, "")}}
            {{textinput("id-by", "By", "", "input-width-m", "", "Input til by", "", false, "")}}
            {{textinput("id-co-adresse", "Evt. CO-adresse", "(frivilligt)", "input-width-m", "", "Input til CO-adresse", "", false, "")}}
            <div class="form-group">
                <fieldset>
                    <legend class="form-label">Er der tidligere søgt om aktindsigt?</legend>
                    <ul class="nobullet-list">
                        <li>
                            {{radiobutton(aktindsigtradio2)}}
                        </li>
                        <li>
                            {{radiobutton(aktindsigtradio2)}}
                        </li>
                    </ul>
                </fieldset>
            </div>
        </div>
        <button type="submit" class="button button-primary d-print-none mt-7">Næste</button>
    </form>
</main>
{% endblock %}

{% block banner -%}
{% endblock %}

{% block footer -%}
  {{ footer_simple(footer_data) }}
{% endblock %}

