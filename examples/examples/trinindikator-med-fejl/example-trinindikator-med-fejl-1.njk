    })
%}

{# <!-- Page content starts here --> #}

{% block header %}
<header class="header">
    <div id="top"></div>
    {{ skiplink() }}
    {{ portal_header(portal_header_data) }}
    {{ solution_header(solution_header_data) }}
    <div class="overlay"></div>
    <div class="navigation-header-mobile">
        <div class="navigation-header-inner container">
            {{ menu_close_button() }}
            {{ mobile_solution_header(solution_header_data) }}
            {{ mobile_portal_header(portal_header_data) }}
        </div>
    </div>
</header>
{% endblock %}

{% block body %}
<div class="container page-container pt-5 pt-lg-0">
    <div class="row">
        <aside class="col-12 col-lg-3">
            {{ overflow_stepguide(trinindikator_data) }}
        </aside>
        <main class="col-12 col-lg-9" id="main-content">
            <button class="function-link link-right d-flex w-percent-100 justify-content-end">{{icon_svg({"name": "save"})}}Gem kladde</button>
            <div><a href="#" class="back-link">Tilbage</a></div>
            {{ 
                alert({
                    "variant": "error",
                    "classes": "mt-0 mb-8",
                    "headingLevel": "h2",
                    "heading": "Der er problemer på et eller flere af trinene i formularen",
                    "contentContainer": false,
                    "content": "<ul class=\"alert-text nobullet-list\"><li><a class=\"function-link\" href=\"#\">Gå til trin 3: Vedhæft dokumenter</a></li></ul>",
                    "attributes": "data-module=\"error-summary\""
                }) 
            }}
            <h1 class="mb-6">Opsummering</h1>
            <h2>Vælg personer</h2>
            {{
                table({
                    "borderless": true,
                    "responsive": true,
                    "classes": {
                        "inner": "w-percent-md-70 d-print-table"
                    },
                    "thead": [
                        { "headerContent": "Person" },
                        { "headerContent": "CPR-nummer" },
                        { "headerContent": "<span class=\"sr-only\">Handlinger</span>", "classes": "d-print-none sr-header" }
                    ],
                    "tbody": [
