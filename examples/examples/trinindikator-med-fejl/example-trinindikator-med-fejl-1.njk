                            { "content": "<a href=\"#\">Redigér<span class=\"sr-only\"> rækkens indhold</span></a>", "classes": "align-text-md-right d-print-none" }
                        ],
                        [
                            { "content": "123456789" },
                            { "content": "01.01.2021" },
                            { "content": "Lorem ipsum dolor sit" },
