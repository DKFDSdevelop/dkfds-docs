{% from "components/skip-link/skip-link.njk" import skiplink as skiplink %}
{% from "components/header/header.njk" import portal_header as portal_header %}
{% from "components/header/header.njk" import mobile_portal_header as mobile_portal_header %}
{% from "components/header/header.njk" import solution_header as solution_header %}
{% from "components/header/header.njk" import mobile_solution_header as mobile_solution_header %}
{% from "components/header/menu-buttons.njk" import menu_close_button as menu_close_button %}

{% from "components/icons/icons--svg.njk" import icon_svg as icon_svg %}
{% from "components/form/controls/select.njk" import select as select %}
{% from "components/buttons/buttons.njk" import button as button %}

{% from "components/overflow-menu/overflow-menu.njk" import overflowmenu as overflowmenu %}

{% from "components/modal/modal.njk" import modal as modal %}

{% from "components/footers/footer.njk" import footer as footer %}
{% from "components/alerts/alerts.njk" import alert as alert %}

{% from "components/overflow-menu/overflow-menu.njk" import overflowmenu as overflowmenu %}

{% set solution_header_data = {
    "lastHeader": true,
    "hideOnPrint": true,
    "title": {
        "href": "#",
        "text": "Fejl i vedhæftede filer"
    },
    "authority": {
        "name": "Myndighedsnavn",
        "text": 'Support: 12 34 56 78 <span class="d-print-none">· <a href="javascript:void(0);" data-module="modal" data-target="modal-contact" class="function-link d-inline-block mt-0">' + icon_svg({"name": "card-text"}) + 'Kontakt</a></span>'
    }
} %}

{% block header %}
<header class="header">
    <div id="top"></div>
    {{ skiplink() }}
    {{ portal_header(portal_header_data) }}
    {{ solution_header(solution_header_data) }}
    <div class="overlay"></div>
    <nav class="nav">
        {{ menu_close_button() }}
        {{ mobile_portal_header(portal_header_data) }}
        {{ mobile_solution_header(solution_header_data) }}
    </nav>
</header>
{% endblock %}


{% block body %}
<main class="container page-container pt-4 pt-lg-6" id="main-content">
    <a href="javascript:void(0);" class="back-link">Tilbage</a>

    {{ alert(error_summary) }}

    <h1>Dokumentation</h1>

    <div class="form-group file-input mb-5 form-error">
        <label class="form-label" for="fileinput">Vedhæft fil</label>
        <span class="form-error-message mb-3" id="fileinput-error"><span class="sr-only">Fejl:</span> Filens størrelse
            skal være under 10MB. Opdel evt. dokumentet og tilføj som flere dokumenter.</span>
        <input type="file" id="fileinput" name="file" aria-describedby="fileinput-error" />
    </div>
    {{ button(button_upload) }}

    <h2 class="h5 mt-8">Vedhæftet</h2>
    <ul class="bordered-list w-percent-md-40 mt-3">
        <li>
            <div class="d-flex justify-content-between"><a href="#" class="function-link">{{ icon_svg({"name": 'file-pdf'})}}Lægeerklæring.pdf</a><button class="function-link">{{ icon_svg({"name": 'trash-can'})}}Slet</button></div>
        </li>
        <li>
            <div class="d-flex justify-content-between"><a href="#" class="function-link">{{ icon_svg({"name": 'file-pdf'})}}Fuldmagt_88.pdf</a><button class="function-link">{{ icon_svg({"name": 'trash-can'})}}Slet</button></div>
        </li>
    </ul>

    {{ button(button_next) }}
</main>
{% endblock %}

{% block footer -%}
{{ footer(footer_data) }}
{% endblock %}

{{ modal(modal_data) }}