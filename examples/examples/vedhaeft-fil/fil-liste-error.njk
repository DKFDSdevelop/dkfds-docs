{% from "components/icons/icons--svg.njk" import icon_svg as icon_svg %}
{% from "components/form/controls/select.njk" import select as select %}
{% from "components/buttons/buttons.njk" import button as button %}

{% from "components/overflow-menu/overflow-menu.njk" import overflowmenu as overflowmenu %}

{% from "components/modal/modal.njk" import modal as modal %}
{%- from "components/header/header.njk" import portal_header as portal_header -%}
{%- from "components/header/header.njk" import solution_header as solution_header -%}
{% from "components/footers/footer-simple.njk" import footer_simple as footer_simple %}
{% from "components/alerts/alerts.njk" import alert as alert %}


{% block header %}
  <header class="header">
    {{ portal_header(portal_header_data) }}
    {{ solution_header(solution_header_data) }}

    <div class="overlay"></div>
    <nav class=" nav"> <!-- collapsible-->
      <button class="button button-tertiary button-menu-close js-menu-close" title="Luk mobil menu">{{icon_svg("close")}}Luk</button>

      <div class="portal-info-mobile">
        <p class="user bold">Christian Emil Vestergaard Christiansen</p>
        <a href="#" class="button button-secondary button-signout">
          Log af
        </a>
      </div>

      <div class="solution-info-mobile">
        <p class="bold">Erhvervsministeriet</p>
        <p><a href="javascript:void(0);" data-module="modal" data-target="modal-contact" class="function-link d-inline-block"><svg class="icon-svg" aria-hidden="true"><use xlink:href="#card-text-outline"></use></svg>Kontakt</a></p>
      </div>
    </nav> <!-- collapsible nav end-->
  </header>
{% endblock %}


{% block body %}
<main class="container page-container pt-4 pt-lg-6">
    <a href="javascript:void(0);" class="back-link">Tilbage</a>

    {{ alert(error_summary.classes, error_summary.role, error_summary.title, error_summary.content, error_summary.aria, "", error_summary.contentContainer ) }}

    <h1>Dokumenter til sagen <span class="weight-normal">(frivilligt)</span></h1>

    <div class="form-group file-input mb-5 form-error">
        <label class="form-label" for="fileinput">Vedhæft fil</label>
        <span class="form-error-message mb-3" id="fileinput-error"><span class="sr-only">Fejl:</span> Dokumentet er større end 10 MB, og kan derfor ikke tilføjes. Opdel dokumentet og tilføj som flere dokumenter.</span>
        <input type="file" id="fileinput" name="file" aria-describedby="fileinput-error" />
    </div>

    <table class="table table--borderless table--responsive-headers d-print-table">
        <thead>
            <tr>
                <th>Filnavn</th>
                <th>Navngiv dokument</th>
                <th>Slet</th>
            </tr>
        </thead>
        <tbody>
             <tr>
                <td><a href="#" class="function-link">{{ icon_svg('file-pdf-outline')}}Lægeerklæring.pdf</a></td>
                <td> {{select(select_example1.name, select_example1.id, select_example1.label, select_example1.class, select_example1.optiontitle, select_example1.options, select_example1.disabled, select_example1.classLabel)}}</td>
                <td>{{ button('', 'unstyled', '', 'delete-outline', 'Slet') }}</td>
             </tr>
             <tr>
                <td><a href="#" class="function-link">{{ icon_svg('file-pdf-outline')}}Fuldmagt_88.pdf</a></td>
                <td> {{select(select_example2.name, select_example2.id, select_example2.label, select_example2.class, select_example2.optiontitle, select_example2.options, select_example2.disabled, select_example2.classLabel, select_example2.formError)}}</td>
                <td>{{ button('', 'unstyled', '', 'delete-outline', 'Slet') }}</td>
             </tr>
        </tbody>
    </table>
    <nav class="page-navigation d-print-none">
      <button class="button button-primary">Næste</button>
    </nav>
</main>
{% endblock %}
{% block footer -%}
  {{ footer_simple(footer_data) }}
{% endblock %}

{{ modal(modal_data) }}

