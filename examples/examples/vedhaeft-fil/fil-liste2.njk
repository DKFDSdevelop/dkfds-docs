{% block header %}
  <header class="header">
    <div id="top"></div>
    <a href="#main-content" class="skipnav">Gå til sidens indhold</a>
    {{ portal_header(portal_header_data) }}
    {{ solution_header(solution_header_data) }}

    <div class="overlay"></div>
    <nav class=" nav"> <!-- collapsible-->
      <button class="function-link button-menu-close js-menu-close" title="Luk mobil menu">{{icon_svg({"name":"close"})}}Luk</button>

      <div class="portal-info-mobile">
        <p class="user bold">Anders Andersen</p>
        <a href="#" class="button button-secondary button-signout">
          Log af
        </a>
      </div>

      <div class="solution-info-mobile">
        <p class="bold">Myndighedsnavn</p>
        <p>Support: 12 34 56 78 <br><a href="javascript:void(0);" data-module="modal" data-target="modal-contact" class="function-link d-inline-block">
            <svg class="icon-svg" aria-hidden="true"><use xlink:href="#card-text"></use></svg>Kontakt</a></p>
    </div>
    </nav> <!-- collapsible nav end-->
  </header>
{% endblock %}


{% block body %}
<main class="container page-container pt-4 pt-lg-6" id="main-content">
    <a href="#" class="back-link">Tilbage</a>

    <h1>Dokumentation</h1>

    <div class="form-group file-input mb-5">
        <label class="form-label" for="fileinput">Vedhæft fil</label>
        <input type="file" id="fileinput" name="file" />
    </div>
    <button class="button button-secondary d-print-none">Upload fil</button>

    <h2 class="h5 mt-8">Vedhæftet</h2>
    <ul class="bordered-list w-percent-md-40 mt-3">
      <li><div class="d-flex justify-content-between"><a href="#" class="function-link">{{ icon_svg({"name": 'file-pdf'})}}Lægeerklæring.pdf</a><button class="function-link">{{ icon_svg({"name": 'trash-can'})}}Slet</button></div></li>
      <li><div class="d-flex justify-content-between"><a href="#" class="function-link">{{ icon_svg({"name": 'file-pdf'})}}Fuldmagt_88.pdf</a><button class="function-link">{{ icon_svg({"name": 'trash-can'})}}Slet</button></div></li>
    </ul>

    <button class="button button-primary mt-8">Næste</button>
</main>
{% endblock %}
