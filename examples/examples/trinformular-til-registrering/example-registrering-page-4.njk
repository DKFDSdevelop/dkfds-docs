        {% set radioTidligereRegistrering = textinput(textinput_data) + dateinput(dateinput_data) %}
        {{ radiobuttons({
            "id": "radiogroup-lignende-registrering",
            "groupname": "radio-group",
            "radiogroupLegend": "Har du tidligere lavet en lignende registrering?",
