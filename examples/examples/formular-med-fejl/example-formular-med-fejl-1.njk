{% from "components/icons/icons--svg.njk" import icon_svg as icon_svg %}
{% from "components/modal/modal.njk" import modal as modal %}
{% from "components/overflow-menu/overflow-menu.njk" import overflowmenu as overflowmenu %}

{%- from "components/header/header.njk" import portal_header as portal_header -%}
{%- from "components/header/header.njk" import solution_header as solution_header -%}
{% from "components/footers/footer.njk" import footer as footer %}

{% from "components/form/controls/text-input.njk" import textinput as textinput %}
{% from "components/form/controls/radiobutton.njk" import radiobutton as radiobutton %}
{% from "components/alerts/alerts.njk" import alert as alert %}

{% block header %}
  <header class="header">
    <div id="top"></div>
    <a href="#main-content" class="skipnav">Gå til sidens indhold</a>
    {{ portal_header(portal_header_data) }}
    {{ solution_header(solution_header_data) }}

    <div class="overlay"></div>
    <nav class=" nav"> <!-- collapsible-->
      <button class="function-link button-menu-close js-menu-close" title="Luk mobil menu">{{icon_svg({"name":"close"})}}Luk</button>

      <div class="portal-info-mobile">
        <p class="user"><span class="weight-semibold">Anders Andersen</span><br />Forsikringens Forsikringsfirma</p>

        <a href="#" class="button button-secondary button-signout">
          Log af
        </a>
      </div>

      <div class="solution-info-mobile">
        <p class="bold">Myndighedsnavn</p>
        <p>Support: 12 34 56 78 <br><a href="javascript:void(0);" data-module="modal" data-target="modal-contact" class="function-link d-inline-block"><svg class="icon-svg" aria-hidden="true"><use xlink:href="#card-text"></use></svg>Kontakt</a></p>
      </div>
    </nav> <!-- collapsible nav end-->
  </header>

{% endblock %}

{% block body %}
  <main class="container page-container" id="main-content">
  {{ alert(alert_summary) }}
    <form novalidate method="post" action="/pages/eksempler/formular-med-fejl/formular-med-fejl-1/">
      <fieldset>
          <legend><h1>Oplysninger om dig</h1></legend>
          <div class="row">
            <div class="mt-5 col-lg-4 col-md-6 col-sm-8">
              {{ textinput(input_navn) }}
              <div class="d-block d-sm-flex align-items-sm-end">
                {{ textinput(input_gade) }}
                {{ textinput(input_husnummer) }}
              </div>
              <div class="d-block d-sm-flex align-items-sm-end">
                {{ textinput(input_postnummer) }}
                {{ textinput(input_by) }}
              </div>
              {{ textinput(input_COadresse) }}
              {{ textinput(input_telefonnummer) }}
              {{ textinput(input_email) }}
              <div class="form-group form-error">
                <fieldset aria-describedby="radiobutton-error">
                  <legend class="form-label">Alder</legend>
                  <span class="form-error-message" id="radiobutton-error"><span class="sr-only">Fejl:</span> Angiv din alder. Vi skal bruge den til dit og dat.</span>
                  <ul class="nobullet-list">
                  {% for item in radiobuttons_alder.items %}<li>{{ radiobutton(item) }}</li>{% endfor %}
                  </ul>
                </fieldset>
              </div>
              <button type="button" class="button button-primary d-print-none mt-7">Næste</button>
            </div>
          </div>
      </fieldset>
    </form>
  </main>
{% endblock %}

{% block banner -%}
{% endblock %}

{% block footer -%}
  {{ footer(footer_data) }}
{% endblock %}

{{ modal(modal_data) }}
