                      </li>
                  </ul>
                </div>
              </div>
            </li>
          </ul>
          <div class="nav-secondary d-none d-lg-block">
            </div>
        </div>
      </div>
      {{ mobile_portal_header(portal_header_data) }}
      {{ 
        mobile_solution_header({
            "authority": {
                "name": "Myndighedsnavn",
                "text": authorityText
            }
        }) 
      }}

      <div class="navbar">
        <div class="navbar-inner navbar-context-actions container">
          <div class="nav-secondary d-none d-lg-block">
          {{ breadcrumbs(breadcrumbs_data_desktop) }}
          </div>
          <div class="nav-actions">
            
          </div>
        </div>
      </div>
  </nav> <!-- collapsible nav end-->
</header>
{% endblock %}

