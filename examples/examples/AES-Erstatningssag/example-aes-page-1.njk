{% from "components/icons/icons--svg.njk" import icon_svg as icon_svg %}
{% from "components/modal/modal.njk" import modal as modal %}
{% from "components/overflow-menu/overflow-menu.njk" import overflowmenu as overflowmenu %}

{%- from "components/header/header.njk" import portal_header as portal_header -%}
{%- from "components/header/header.njk" import solution_header as solution_header -%}
{% from "components/footers/footer.njk" import footer as footer %}

{% from "components/form/controls/text-input.njk" import textinput as textinput %}
{% from "components/form/controls/radiobutton.njk" import radiobutton as radiobutton %}

{% block header %}
  <header class="header">
    <a href="#main-content" class="skipnav">Gå til sidens indhold</a>
    {{ portal_header(portal_header_data) }}
    {{ solution_header(solution_header_data) }}

    <div class="overlay"></div>
    <nav class=" nav"> <!-- collapsible-->
      <button class="function-link button-menu-close js-menu-close" title="Luk mobil menu">{{icon_svg({"name":"close"})}}Luk</button>

      <div class="portal-info-mobile">
        <p class="user"><span class="weight-semibold">Anders Andersen</span><br />Forsikringens Forsikringsfirma</p>

        <a href="#" class="button button-secondary button-signout">
          Log af
        </a>
      </div>

      <div class="solution-info-mobile">
        <p class="bold">Erhvervsministeriet</p>
        <p>Support: 72 20 60 00 <br><a href="javascript:void(0);" data-module="modal" data-target="modal-contact" class="function-link d-inline-block"><svg class="icon-svg" aria-hidden="true"><use xlink:href="#card-text"></use></svg>Kontakt</a></p>
      </div>

      <div class="navbar">
        <div class="navbar-inner navbar-context-actions container">
          <div class="nav-actions">
            <a href="" class="function-link">{{icon_svg({"name": "save"})}}Gem kladde</a>
          </div>
        </div>
      </div>

    </nav> <!-- collapsible nav end-->
  </header>

{% endblock %}

{% block body %}
  <main class="container page-container" id="main-content">
    {{overflowmenu(stepguide) }}
    <h1>Oplysninger om afsender</h1>
    {{textinput({
        "name":"virksomhed",
        "label": {
            "text":"Virksomhed"
            },
        "classes":"input-width-m",
        "id":"input-virksomhed",
        "value":"Forsikringens Forsikringsfirma",
        "readonly": true})}}
    <div class="form-group">
        <fieldset>
            <legend class="form-label">Afsender er</legend>
            <ul class="nobullet-list">
            {% for item in radiobutton_afsender.items %}<li>{{ radiobutton(item) }}</li>{% endfor %}
            </ul>
        </fieldset>
    </div>
    
        <form novalidate method="get" action="/pages/eksempler/AES-erstatningssag/aes-2/">
            <button class="button button-primary mt-8 d-print-none">Næste</button>
        </form>
  </main>
{% endblock %}

{% block banner -%}
{% endblock %}

{% block footer -%}
  {{ footer(footer_data) }}
{% endblock %}

{{ modal(modal_data) }}
