{% from "components/icons/icons--svg.njk" import icon_svg as icon_svg %}
{% from "components/overflow-menu/overflow-menu.njk" import overflowmenu as overflowmenu %}
{% from "components/modal/modal.njk" import modal as modal %}

{%- from "components/header/header.njk" import portal_header as portal_header -%}
{% from "components/header/header.njk" import mobile_portal_header as mobile_portal_header %}
{%- from "components/header/header.njk" import solution_header as solution_header -%}
{% from "components/header/header.njk" import mobile_solution_header as mobile_solution_header %}
{% from "components/footers/footer.njk" import footer as footer %}

{% from "components/buttons/buttons.njk" import button as button %}


{% block header %}
  <header class="header">
    <div id="top"></div>
    <a href="#main-content" class="skipnav">Gå til sidens indhold</a>
    {{ portal_header(portal_header_data) }}

    {% set authorityText = 
      'Support: 12 34 56 78 <span class="d-print-none">· <a href="javascript:void(0);" data-module="modal" data-target="modal-contact" class="function-link d-inline-block mt-0">' + icon_svg({"name": "card-text"}) + 'Kontakt</a></span>'
    %}
    {{ 
      solution_header({
        "lastHeader": true,
        "title": {
          "href": "#",
          "text": "Løsningstitel står her"
        },
        "authority": {
          "name": "Myndighedsnavn",
          "text": authorityText
        }
      }) 
    }}

    <div class="overlay"></div>
    <nav class=" nav"> <!-- collapsible-->
        <button class="function-link button-menu-close js-menu-close" aria-label="Luk menu">{{icon_svg({"name":"close"})}}Luk</button>
  
        {{ mobile_portal_header(portal_header_data) }}
  
        {{ 
          mobile_solution_header({
              "authority": {
                  "name": "Myndighedsnavn",
                  "text": authorityText
              }
          }) 
        }}
      </nav> <!-- collapsible nav end-->
  </header>
{% endblock %}

{% block body %}
  <main class="container page-container pt-4 pt-lg-6" id="main-content">

    <a href="/pages/eksempler/formular-til-kontaktoplysninger/formular-1/" class="back-link">Tilbage</a>
    
