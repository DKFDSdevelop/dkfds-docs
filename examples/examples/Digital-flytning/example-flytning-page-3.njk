{% from "components/icons/icons--svg.njk" import icon_svg as icon_svg %}
{% from "components/modal/modal.njk" import modal as modal %}
{% from "components/overflow-menu/overflow-menu.njk" import overflowmenu as overflowmenu %}

{%- from "components/header/header.njk" import portal_header as portal_header -%}
{%- from "components/header/header.njk" import solution_header as solution_header -%}
{% from "components/footers/footer-simple.njk" import footer_simple as footer_simple %}

{% from "components/form/controls/text-input.njk" import textinput as textinput %}
{% from "components/form/controls/date-input.njk" import datoinput as datoinput %}
{% from "components/form/controls/select.njk" import select as select %}
{% from "components/alerts/alerts.njk" import alert as alert %}


{% block header %}
  <header class="header"><a href="#main-content" class="skipnav">Gå til sidens indhold</a>
    {{ portal_header(portal_header_data) }}
    {{ solution_header(solution_header_data) }}

    <div class="overlay"></div>
    <nav class=" nav"> <!-- collapsible-->
      <button class="button button-tertiary button-menu-close js-menu-close" title="Luk mobil menu">{{icon_svg("close")}}Luk</button>

      <div class="portal-info-mobile">
        <p class="user bold">Navn</p>
        {# <p class="mt-0">Københavns Urmager Værksted v/Martin Elsig</p> #}
        <a href="#" class="button button-secondary button-signout">
          Log af
        </a>
      </div>

      <div class="solution-info-mobile">
        <p class="bold">Erhvervsministeriet</p>
        <p><a href="javascript:void(0);" data-module="modal" data-target="modal-contact" class="function-link d-inline-block"><svg class="icon-svg" aria-hidden="true"><use xlink:href="#card-text"></use></svg>Kontakt</a></p>
      </div>
    </nav> <!-- collapsible nav end-->
  </header>
{% endblock %}

{% block body %}
<main class="container page-container" id="main-content">
    <div><a href="/pages/eksempler/digital-flytning/flytning-2/" class="back-link">Tilbage</a></div>
  {{overflowmenu("Trin 3 af 5","overflow_steps", true, false, "arrow-drop-down" ,"
      <nav><ul class='sidenav-list' role='menu'>
          <li role='none'>
              <a href='/pages/eksempler/digital-flytning/flytning-1/' role='menuitem'>
                  1. Oversigt
                  <span class='sidenav-icon' aria-label='Gennemført'>
                      <svg class='icon-svg' aria-hidden='true' focusable='false'><use xlink:href='#done'></use></svg>
                  </span>
              </a>
          </li>
          <li role='none'>
              <a href='/pages/eksempler/digital-flytning/flytning-2/' role='menuitem'>
                  2. Personer
                  <span class='sidenav-icon' aria-label='Gennemført'>
                      <svg class='icon-svg' aria-hidden='true' focusable='false'><use xlink:href='#done'></use></svg>
                  </span>
              </a>
          </li>
          <li class='active current' role='none'>
              <a href='/pages/eksempler/digital-flytning/flytning-3/' role='menuitem' aria-current='page'>
                  3. Adresse
              </a>
          </li>
          <li role='none'>
              <a href='/pages/eksempler/digital-flytning/flytning-4/' role='menuitem'>
                  4. Særlig flytning
              </a>
          </li>
          <li role='none'>
              <a href='/pages/eksempler/digital-flytning/flytning-5/' role='menuitem'>
                  5. Lægevalg
              </a>
          </li>
      </ul></nav>
      "
  ) }}
  <h1>Adresse</h1>
  {{ alert("alert alert-warning", "", "Ikke alle adresser er registreret i dette register", "Kan du ikke finde din tilflytningsadresse, bedes du kontakte din tilflytningskommune.", "warning" ) }}
  <div class="mt-6">
    {{datoinput("Dato for flytning", "Fx. 28 04 1996", "Dato", "Måned", "År")}}
  </div>
  <div class="mt-6">
    {{select("Gade / vejnavn", "select-street", "Gade / vejnavn", "input-width-m", "Vælg fra listen", [{value: 'Byvej', text:'Byvej' }], false)}}
  </div>
  <div class="mt-6">
    {{select("Husnr. / bogstav", "select-housenumber", "Husnr. / bogstav", "input-width-xs", "Vælg fra listen",  [{value: '1', text:'1'}, {value: '2', text:'2'}, {value: '3', text:'3'}], true)}}
  </div>
  <div class="mt-6">
    {{select("Etage, side/dør", "select-door", "Etage, side/dør", "input-width-xs", "Vælg fra listen", [{value: '1', text:'1'}], true)}}
  </div>
  <div class="mt-6">
    {{textinput("id-co", "C/O navn", "(frivilligt)", "input-width-m", false, "Input til C/O navn", "", false, false, "C/O navn skal kun udfyldes, hvis du skal bo til leje hos de nuværende beboere.", "")}}
  </div>

  <nav class="page-navigation d-print-none">
    <a href="/pages/eksempler/digital-flytning/flytning-4/" class="button button-primary">Næste</a>
  </nav>
</main>
{% endblock %}

