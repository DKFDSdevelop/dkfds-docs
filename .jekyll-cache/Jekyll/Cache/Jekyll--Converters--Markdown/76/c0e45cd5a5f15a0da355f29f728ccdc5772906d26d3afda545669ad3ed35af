  <h2 id="placering-af-tooltip">Placering af tooltip</h2>
  
  
  
<div class="component-preview  component-preview-tooltip-position" aria-label="Eksempel på placering af tooltip">
    
    <div class="component-link px-4 py-4">
        
        <a href="/eksempel/tooltip-position/" class="small-text" target="_blank">Åbn dette eksempel i et nyt vindue<span class="sr-only">: tooltip-position</span></a>
        
    </div>
    
    <div class="component-example px-4 py-4" aria-label="Eksempel">
        <!-- Placering: top -->
<button class="button button-primary js-tooltip" data-tooltip-position="top" data-tooltip="Top tooltip">
    Top
</button>

<!-- Placering: bund -->
<button class="button button-primary js-tooltip" data-tooltip-position="bottom" data-tooltip="Bund tooltip">
    Bund
</button>
    </div>
    
